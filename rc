
colorscheme molokai

" Vimperator preferences. {{{

" Completion.
set wildmode=list:longest
set noautocomplete

" Default search engine.
set defsearch=ixquick

" Open a new tab for some commands.
set newtab+=addons,downloads,help

" Only display addons and tabs bars.
set gui=addons,tabs

" Configure the status bar.
set status=input,ssl,location,bookmark,history,tabcount,position

" Show the destination of the link under the cursor in the command line.
set showstatuslinks=2

" }}}

" Firefox preferences. {{{

" Disable smooth scrolling.
set! general.smoothScroll=false
" On tab bar too.
set! toolkit.scrollbox.smoothScroll=false

" Disable image on drag and drop.
set! nglayout.enable_drag_images=false

" No close button on tabs.
set! browser.tabs.closeButtons=3
" And no animations...
set! browser.tabs.animate=false
" Keep window open when closing last tab.
set! browser.tabs.closeWindowWithLastTab=true

" Disable download animations...
set! browser.download.animateNotifications=false

" Disable fullscreen animations...
set! browser.fullscreen.animateUp=0

" Disable tab-groups animations...
set! browser.panorama.animate_zoom=false

" Set startup page to blank tab.
set! browser.startup.homepage="about:blank"
" And restore last session on startup.
set! browser.startup.page=2

" Save session every minute.
set! browser.sessionstore.interval=60000

" Enable DoNotTrack.
set! privacy.donottrackheader.enabled=true

" Disable password manager.
set! signon.rememberSignons=false

" Use dark theme for developer tools.
set! devtools.theme="dark"

" Do not report to Mozilla...
set! datareporting.healthreport.uploadEnabled=false

" Do not report to Google...
set! browser.safebrowsing.enabled=false
set! browser.safebrowsing.malware.enableds=false

" Disable clipboard events.
set! dom.event.clipboardevents.enabled=false

" Don't use internal editor for viewing sources.
set! view_source.editor.external=true
set! view_source.editor.path="/usr/bin/gvim"

" }}}

" User styles. {{{

" Fix input fields: white on black.
style -name=inputs * input:not([type=image]):not([type=submit]) { -moz-appearance: none !important; background-color: black !important; background-image: none !important; color: white !important; } textarea { -moz-appearance: none !important; background-color: black !important; background-image: none !important; color: white !important; } select { -moz-appearance: none !important; background-color: black !important; color: white !important; }

" }}}

" vim: ft=vim sw=2 foldmethod=marker foldlevel=0
