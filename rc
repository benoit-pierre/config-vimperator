
colorscheme molokai

" Vimperator preferences. {{{

" Completion.
set wildmode=list:longest
set noautocomplete

" Default search engine.
set defsearch=ixquick

" Open a new tab for some commands.
set newtab+=addons,downloads,help

" Only display addons and tabs bars.
set toolbars=none,addons,tabs

" Configure the status bar.
set status=input,ssl,location,bookmark,history,tabcount,position

" Show the destination of the link under the cursor in the command line.
set showstatuslinks=2

" }}}

" User styles. {{{

" Fix input fields: white on black.
style -name=inputs * input:not([type=image]):not([type=submit]) { -moz-appearance: none !important; background-color: black !important; background-image: none !important; color: white !important; } textarea { -moz-appearance: none !important; background-color: black !important; background-image: none !important; color: white !important; } select { -moz-appearance: none !important; background-color: black !important; color: white !important; }

" }}}

" vim: ft=vim sw=2 foldmethod=marker foldlevel=0
